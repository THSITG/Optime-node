script(id="tmpl-new-task", class="optime-tmpl", type="text/x-jsrender")
  h1 New Task
  paper-dropdown-menu(class="new-task-dropdown", label="Taskboard")
    paper-dropdown(class="dropdown")
      core-menu(class="menu new-task-dropdown-menu")
        | {{for boards}}
        paper-item(class="new-task-dropdown-item", bid="{{:bid}}") {{:name}}
        | {{/for}}
  paper-input-decorator(class="new-task-title", label="Title", floatingLabel="true", autoValidate="true", error="Please enter a title")
    input(is="core-input",required="true")
  paper-input-decorator(class="new-task-desc", label="Description (Optional)", floatingLabel="true", autoValidate="false")
    paper-autogrow-textarea(class="new-task-desc-wrapper")
      textarea
