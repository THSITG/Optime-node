script(id="tmpl-login", class="optime-tmpl", type="text/x-jsrender")
  div(id="login-bar",horizontal,layout)
    h1(id="login-title") Login
    div(id="login-placeholder", flex)
    span(id="login-switcher-hint") New user?
    paper-toggle-button(id="login-switcher")/
  div(id="login-error")
  paper-input-decorator(id="registerName",label="Name",floatingLabel="true",autoValidate="true",error="Only a-z, A-Z, 0-9, _ are allowed")
    input(is="core-input",pattern="^[a-zA-Z0-9_]+$",required="false")
  paper-input-decorator(id="loginEmail",label="Email",floatingLabel="true",autoValidate="true",error="Please enter a valid email address")
    input(is="core-input",type="email",required="true")
  paper-input-decorator(id="loginPasswd",label="Password",floatingLabel="true",autoValidate="true",error="Please enter your password")
    input(is="core-input",type="password",required="true")
